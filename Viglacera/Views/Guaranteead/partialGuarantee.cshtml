@using PagedList.Mvc;
@model PagedList.IPagedList<Viglacera.Models.tblGuarantee>
@using Viglacera.Models
<div id="ajaxnhan">
    <table class="table table-striped table-bordered dataTable table-hover" cellspacing="0" id="cph_Main_ctl00_ctl00_grvProducts" style="border-collapse:collapse;">
        <tr>
            <th scope="col">
                <input id="cph_Main_ctl00_ctl00_grvProducts_chkAll" type="checkbox" name="ctl00$cph_Main$ctl00$ctl00$grvProducts$ctl01$chkAll" onclick="javascript:SelectAllCheckboxes(this);" />
            </th>
            <th scope="col">Tên địa chỉ bảo hành</th>
            <th scope="col">Số TT</th>
            <th scope="col">Kích hoạt</th>
            <th scope="col">Thao tác</th>
        </tr>
        @foreach (var item in Model)
        {
            if (item.Active == true)
            {
                <tr class="row0">
                    <td align="center" style="width:8px;">
                        <input id="chk_@item.id" type="checkbox" name="chk_@item.id" />

                    </td>
                    <td>
                        <a title="Sửa module @item.Name" href="../../Guaranteead/Edit?id=@item.id" id="@Html.Raw("lbtUpdateProduct")@item.id"> @item.Name <span style="color:red">(  @item.id )</span></a>
                    </td>
                    <td class="OrderNumber" align="center" style="width:45px;">
                        <input type="text" id="txtOrderNumber" style="width: 30px;" value="@item.Ord" onchange="javascript:return UpdateGuarantee(@item.id);" />
                    </td>
                    <td class="Active text-center" align="center" style="width:45px;">
                        @if (item.Active == true)
                        {
                            <input type="checkbox" id="Active" value="true" checked onchange="javascript:return UpdateGuarantee(@item.id);" />
                        }
                        else
                        {
                            <input type="checkbox" id="Active" value="false" onchange="javascript:return UpdateGuarantee(@item.id);" />
                        }
                    </td>

                    <td class="text-center" align="center" style="width:90px;">
                        <a class="action-link-button" title="Sửa tài khoản" href="../../Guaranteead/Edit?id=@item.id">
                            <i class="icon-edit"></i>
                        </a>
                        <a href="" class="action-link-button" id="@item.id" onclick="javascript:return DeleteGuarantee(@item.id);" title="Xóa sản danh mục">
                            <i class="icon-trash"></i>
                        </a>
                    </td>
                </tr>
            }
            else
            {
                <tr class="row0" style="opacity:0.2">
                    <td align="center" style="width:8px;">
                        <input id="chk_@item.id" type="checkbox" name="chk_@item.id" />

                    </td>
                    <td>
                        <a title="Sửa module @item.Name" href="../../Guaranteead/Edit?id=@item.id" id="@Html.Raw("lbtUpdateProduct")@item.id"> @item.Name <span style="color:red">(  @item.id )</span></a>
                    </td>
                    <td class="OrderNumber" align="center" style="width:45px;">
                        <input type="text" id="txtOrderNumber" style="width: 30px;" value="@item.Ord" onchange="javascript:return UpdateGuarantee(@item.id);" />
                    </td>
                    <td class="Active text-center" align="center" style="width:45px;">
                        @if (item.Active == true)
                        {
                            <input type="checkbox" id="Active" value="true" checked onchange="javascript:return UpdateGuarantee(@item.id);" />
                        }
                        else
                        {
                            <input type="checkbox" id="Active" value="false" onchange="javascript:return UpdateGuarantee(@item.id);" />
                        }
                    </td>

                    <td class="text-center" align="center" style="width:90px;">
                        <a class="action-link-button" title="Sửa tài khoản" href="../../Guaranteead/Edit?id=@item.id">
                            <i class="icon-edit"></i>
                        </a>
                        <a href="" class="action-link-button" id="@item.id" onclick="javascript:return DeleteGuarantee(@item.id);" title="Xóa sản danh mục">
                            <i class="icon-trash"></i>
                        </a>
                    </td>
                </tr>
            }

        }

    </table>
    <div class="pagination pagination-small pagination-right">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page, idcate = @ViewBag.idcate, pageSizes = @ViewBag.pageSizes, sortOrder = ViewBag.CurrentSortOrder, sortName = ViewBag.CurrentSortName, sortLevel = ViewBag.CurrentSortLevel }), (PagedListRenderOptions)ViewBag.ship)
    </div>
</div>